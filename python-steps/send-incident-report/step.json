{
    "meta" : {
        "label": "Send a ServiceNow incident",
        "description": "",
        "icon": "fas fa-bell"
    },
    "params": [
        {
            "name": "auth_type",
            "label": "Authentication type",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "basic_per_user",
                    "label": "User account"
                },
                {
                    "value": "basic_service_account",
                    "label": "Service account"
                }
            ]
        },
        {
            "name": "basic_per_user",
            "label": "Per user",
            "type": "PRESET",
            "parameterSetId": "basic-per-user",
            "visibilityCondition": "model.auth_type=='basic_per_user'"
        },
        {
            "name": "basic_service_account",
            "label": "Service account",
            "type": "PRESET",
            "parameterSetId": "basic-service-account",
            "visibilityCondition": "model.auth_type=='basic_service_account'"
        },
        {
            "name": "datasets_to_tag",
            "label": "Datasets",
            "description": "Datasets to tag as faulty",
            "type": "DATASETS"
        },
        {
            "name": "caller_id",
            "label": "Caller ID",
            "type": "STRING"
        },
        {
            "name": "short_description",
            "label": "Short description",
            "defaultValue": "Something wrong with project ${projectKey}",
            "type": "STRING"
        },
        {
            "name": "description",
            "label": "Description",
            "defaultValue": "There was an issue while building {{dataset}} in the project {{projectKey}}.\nThe impacted scenario run can be found here : {{scenarioRunURL}}.",
            "type": "TEXTAREA"
        },
        {
            "name": "attach_scenario_variables",
            "label": "Attach scenario variables",
            "description": "Scenario variables sent in the ticket as attachement file",
            "type": "BOOLEAN"
        }
    ]
}
